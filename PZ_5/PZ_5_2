
try:
  c = 0 
  while 5 > c: # задаём 5 повторов для 5 чисел
    c += 1 
    a = int(input("Введите число:")) # задаём число
    if 100 <= a <= 999: # Задаём условия трехзначности числа
      def k(a):
        ab = a # меняем глобальную переменную на локальную
        b = ab // 100
        c = (ab // 10) % 10
        d = ab % 10
        l = d * 100 + c * 10 + b # меняем числа местами
        print(l)
      k(a) # вызываем функцию
    else: print ("Число не трехзначное")
except ValueError:
    print("Ошибка! Введено не число!")  # если ввели что то кроме чисел выходит ошибка
